<% layout('layout') %>

<form class="card" action="/posts/<%= post.id %>?_method=PUT" method="post">
  <h2 class="post-title">Edit Post</h2>
  <div class="field">
    <label for="title">Title</label>
    <input id="title" type="text" name="title" value="<%- post.title %>" />
    <% if (errors.title) { %><div class="error"><%= errors.title %></div><% } %>
  </div>
  <div class="field">
    <label for="body">Body</label>
    <textarea id="body" name="body"><%- post.body %></textarea>
    <% if (errors.body) { %><div class="error"><%= errors.body %></div><% } %>
  </div>
  <div class="actions">
    <a class="btn secondary" href="/posts/<%= post.id %>">Cancel</a>
    <button type="submit">Save Changes</button>
  </div>
  </form>


