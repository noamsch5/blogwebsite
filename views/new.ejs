<% layout('layout') %>

<form class="card" action="/posts" method="post">
  <h2 class="post-title">Create New Post</h2>
  <div class="field">
    <label for="title">Title</label>
    <input id="title" type="text" name="title" value="<%- values.title %>" />
    <% if (errors.title) { %><div class="error"><%= errors.title %></div><% } %>
  </div>
  <div class="field">
    <label for="body">Body</label>
    <textarea id="body" name="body"><%- values.body %></textarea>
    <% if (errors.body) { %><div class="error"><%= errors.body %></div><% } %>
  </div>
  <div class="actions">
    <a class="btn secondary" href="/posts">Cancel</a>
    <button type="submit">Create</button>
  </div>
  </form>


